<%- include('partials/header') %>

<%- include('partials/navbar') %>



<!-- Cart Page  -->
    <table class="cart-table" border="3" cellpadding="20" cellspacing="1">
        <thead class="table-head">
            <tr class="table-row">
                <th>Sr.No</th>
                <th colspan="2">Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% sum = 0; %>
            <% pageCart.forEach((item, index) => { %>
            <tr class="table-row" align="center">
                <td><%=(index+1)%></td>
                <td colspan="2"><%=item.name%></td>
                <td><%=item.price%></td>
            </tr>
            <% sum = sum +  item.price %> 
            <% }); %>
        </tbody>
        <tfoot >
            <tr class="table-row">
                <th colspan="3">Total Price to pay = </th>
                <th>Rs. <%= sum %></th>
            </tr>
            <tr>
                <td colspan="4"> <a href="/payment/<%= sum %>"><button class="btn-cart" >Pay Rs. <%= sum %></button></a></td>
            </tr>
        </tfoot>
      
    </table>

