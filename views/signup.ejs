<form class="form-signin" action="/signup" method="post">
    <h1 class="h3 mb-3 font-weight-normal text-dark" >Sign-Up</h1>

    <label for="inputFullName" class="sr-only">Full Name</label>
    <input type="text"  name= "myName" class="form-control" placeholder="Full Name" required autofocus>
    
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" name="myEmail" class="form-control" placeholder="Email"  autofocus>

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="myPassword" class="form-control" placeholder="Password" >

    <button class="btn btn-lg btn-info btn-block" type="submit">Sign Up</button>
    <a href="/signin">Already have account, Click here...</a>
    <p class="mt-5 mb-3 text-muted">&copy; 2023 Amit</p>   
 
  </form>

  
